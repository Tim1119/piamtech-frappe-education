{
  "doctype": "DocType",
  "name": "School Level Policy",
  "module": "Piamtech Frappe Education",
  "custom": 1,
  "autoname": "field:policy_name",
  "fields": [
    {
      "fieldname": "general_tab",
      "label": "General Details",
      "fieldtype": "Tab Break"
    },
    {
      "fieldname": "policy_name",
      "label": "Policy Name",
      "fieldtype": "Data",
      "reqd": 1,
      "unique": 1
    },
    {
      "fieldname": "school_level",
      "label": "School Level",
      "fieldtype": "Select",
      "options": "Primary\nSecondary",
      "reqd": 1
    },
    {
      "fieldname": "applicable_groups",
      "label": "Applicable Student Groups",
      "fieldtype": "Table",
      "options": "Policy Student Group Link",
      "description": "The specific classes/groups that follow this policy"
    },
    {
      "fieldname": "assessment_tab",
      "label": "Assessment & Grading",
      "fieldtype": "Tab Break"
    },
    {
      "fieldname": "max_assessment_score",
      "label": "Maximum Assessment Score",
      "fieldtype": "Int",
      "default": 100
    },
    {
      "fieldname": "policy_assessment_criteria",
      "label": "Assessment Criteria",
      "fieldtype": "Table",
      "options": "Policy Assessment Criteria"
    },
    {
      "fieldname": "promotion_tab",
      "label": "Promotion & Core Subjects",
      "fieldtype": "Tab Break"
    },
    {
      "fieldname": "promotion_passing_score",
      "label": "Min Passing Score",
      "fieldtype": "Int",
      "default": 40
    },
    {
      "fieldname": "core_subjects",
      "label": "Mandatory Core Subjects",
      "fieldtype": "Table",
      "options": "Core Subject Config",
      "description": "Student MUST pass these specific subjects to be promoted"
    },
    {
      "fieldname": "signatures_tab",
      "label": "Signatures & Stamps",
      "fieldtype": "Tab Break"
    },
    {
      "fieldname": "school_head_role",
      "label": "School Head Role",
      "fieldtype": "Select",
      "options": "Principal\nHeadmaster\nHeadmistress\nProprietor\nProprietress",
      "description": "Title of the head of primary / secondary school"
    },
    {
      "fieldname": "school_head_name",
      "label": "School Head Name",
      "fieldtype": "Data",
      "description": "Name of Principal, Headmaster, Headteacher"
    },
    {
      "fieldname": "school_head_signature",
      "label": "School Head Signature",
      "fieldtype": "Attach Image"
    },
    {
      "fieldname": "school_stamp",
      "label": "School Stamp",
      "fieldtype": "Attach Image"
    }
  ],
  "permissions": [
    { "role": "System Manager", "read": 1, "write": 1, "create": 1 },
    { "role": "Education Manager", "read": 1, "write": 1, "create": 1 }
  ]
}